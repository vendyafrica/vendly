{
  "extends": "@vendly/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@vendly/auth": [
        "../../packages/auth/src/index.ts"
      ],
      "@vendly/auth/*": [
        "../../packages/auth/src/*"
      ],
      "@vendly/database": [
        "../../packages/database/src/index.ts"
      ],
      "@vendly/database/*": [
        "../../packages/database/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
