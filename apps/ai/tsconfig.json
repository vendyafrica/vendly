{
  "extends": "@vendly/typescript-config/nextjs.json",
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@vendly/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "../../packages/ui/src",
    "next.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}