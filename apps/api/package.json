{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pnpm build:transactional && pnpm build:auth && tsx watch src/server.ts",
    "build": "tsup",
    "build:auth": "cd ../../packages/auth && pnpm build",
    "build:transactional": "cd ../../packages/transactional && pnpm build",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.10",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "@vendly/db": "workspace:*",
    "@vendly/auth": "workspace:*",
    "@vendly/transactional": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "express": "5.2.1",
    "morgan": "^1.10.0",
    "resend": "^6.5.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.2",
    "@vendly/eslint-config": "workspace:*",
    "@vendly/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.0",
    "supertest": "^7.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}