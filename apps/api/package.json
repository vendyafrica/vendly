{
  "name": "@vendly/api",
  "version": "1.0.0",
  "description": "Vendly backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env PORT=8000 nodemon --watch src --ext ts --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "keywords": [
    "express",
    "api",
    "backend",
    "vendly"
  ],
  "author": "Vendly Africa",
  "license": "ISC",
  "dependencies": {
    "@vendly/auth": "workspace:*",
    "@vendly/database": "workspace:*",
    "@clerk/express": "^1.7.33",
    "@supabase/supabase-js": "^2.57.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}