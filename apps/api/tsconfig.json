{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "../../",
    "paths": {
      "@vendly/database": [
        "packages/database/src/index.ts"
      ],
      "@vendly/database/*": [
        "packages/database/src/*"
      ],
      "@vendly/auth": [
        "packages/auth/src/index.ts"
      ],
      "@vendly/auth/*": [
        "packages/auth/src/*"
      ],
      "@vendly/types": [
        "packages/types/src/index.ts"
      ],
      "@vendly/types/*": [
        "packages/types/src/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "../../packages/auth/src/**/*",
    "../../packages/database/src/**/*",
    "../../packages/instagram/src/**/*",
    "../../packages/types/src/**/*",
    "src/routes/auth_routes.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}