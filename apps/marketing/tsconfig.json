{
  "extends": "../../packages/config-typescript/nextjs.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/app/*": ["./app/*"],
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "app",
    "components",
    "lib",
    "components.json",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ]
}
