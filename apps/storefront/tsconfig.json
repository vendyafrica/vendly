{
  "extends": "@vendly/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@vendly/auth": [
        "../../packages/auth/src/index.ts"
      ],
      "@vendly/auth/*": [
        "../../packages/auth/src/*"
      ],
      "@vendly/database": [
        "../../packages/database/src/index.ts"
      ],
      "@vendly/database/*": [
        "../../packages/database/src/*"
      ]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
