{
  "$schema": "https://turborepo.com/microfrontends/schema.json",
  "options": {
    "localProxyPort": 3024
  },
  "applications": {
    "web": {
      "packageName": "web",
      "development": {
        "local": {
          "port": 3000
        }
      }
    },
    "admin": {
      "packageName": "admin",
      "development": {
        "local": {
          "port": 4000
        }
      },
      "routing": [
        {
          "group": "admin",
          "paths": ["/admin", "/admin/:path*"]
        }
      ]
    },
    "ai": {
      "packageName": "ai",
      "development": {
        "local": {
          "port": 5000
        }
      },
      "routing": [
        {
          "group": "ai",
          "paths": ["/ai", "/ai/:path*"]
        }
      ]
    }
  }
}
