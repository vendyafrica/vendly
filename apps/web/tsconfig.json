{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@vendly/auth": ["../../packages/auth/src/index.ts"],
      "@vendly/auth/*": ["../../packages/auth/src/*"],
      "@vendly/database": ["../../packages/database/src/index.ts"],
      "@vendly/database/*": ["../../packages/database/src/*"],
      "@vendly/types": ["../../packages/types/src/index.ts"],
      "@vendly/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
