{
  "extends": "@vendly/typescript-config/nextjs.json",
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@vendly/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@vendly/db": [
        "../../packages/db/src/index.ts"
      ],
      "@vendly/auth": [
        "../../packages/auth/src/index.ts"
      ],
      "@vendly/auth/auth-client": [
        "../../packages/auth/src/auth-client.ts"
      ],
      "@vendly/transactional": [
        "../../packages/transactional/index.ts"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "../../packages/ui/src",
    "../../packages/db/src",
    "../../packages/auth/src",
    "../../packages/transactional",
    "next.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}