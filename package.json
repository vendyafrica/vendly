{
  "name": "vendly",
  "version": "1.0.0",
  "description": "Vendly - Transform social commerce with AI-powered cataloging, payments, and delivery",
  "private": true,
  "type": "commonjs",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --filter=!//",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vendyafrica/vendly.git"
  },
  "keywords": ["monorepo", "turborepo", "nextjs", "express", "typescript"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vendyafrica/vendly/issues"
  },
  "homepage": "https://github.com/vendyafrica/vendly#readme",
  "devDependencies": {
    "turbo": "^2.5.6",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {}
  },
  "packageManager": "pnpm@10.7.0"
}