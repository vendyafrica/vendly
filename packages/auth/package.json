{
  "name": "@vendly/auth",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/auth-client.d.ts",
      "import": "./dist/auth-client.js"
    },
    "./server": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    },
    "./auth-client": {
      "types": "./dist/auth-client.d.ts",
      "import": "./dist/auth-client.js"
    },
    "./react": {
      "types": "./dist/auth-client.d.ts",
      "import": "./dist/auth-client.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0"
