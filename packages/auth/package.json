  "dependencies": {
    "@types/node": "^22.15.3",
    "@vendly/db": "workspace:*",
    "@vendly/transactional": "workspace:*",
    "better-auth": "^1.4.10",
    "dotenv": "^17.2.3",
    "tsup": "^8.5.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@vendly/eslint-config": "workspace:*",
    "@vendly/typescript-config": "workspace:*",
    "eslint": "^9.39.0"
  }
