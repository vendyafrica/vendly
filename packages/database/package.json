{
  "name": "@vendly/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "build": "tsc -b",
    "lint": "eslint src/**/*.{ts,js}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@vendly/types": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.5",
    "dotenv": "^17.2.3",
    "@vendly/typescript-config": "workspace:*"
  }
}