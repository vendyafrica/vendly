{
  "name": "@vendly/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
 "exports": {
  ".": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "./*": {
    "types": "./dist/*.d.ts",
    "default": "./dist/*.js"
  },
  "./schema/*": {
    "types": "./dist/schema/*.d.ts",
    "default": "./dist/schema/*.js"
  }
},
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "build": "tsc -b",
    "lint": "eslint src/**/*.{ts,js}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.6",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@vendly/typescript-config": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}