{
    "name": "@vendly/db",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:migrate": "drizzle-kit migrate",
        "db:reset": "npx tsx src/reset.ts && drizzle-kit push"
    },
    "dependencies": {
        "@neondatabase/serverless": "^1.0.2",
        "bcrypt-ts": "^7.1.0",
        "drizzle-orm": "^0.45.1",
        "dotenv": "^17.2.3",
        "postgres": "^3.4.7",
        "server-only": "^0.0.1",
        "tsup": "^8.5.0"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "drizzle-kit": "^0.30.2",
        "tsx": "^4.19.2",
        "typescript": "^5.9.3"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./db": {
            "types": "./dist/db.d.ts",
            "import": "./dist/db.js",
            "require": "./dist/db.cjs"
        },
        "./schema": {
            "types": "./dist/schema/index.d.ts",
            "import": "./dist/schema/index.js",
            "require": "./dist/schema/index.cjs"
        }
    }
}