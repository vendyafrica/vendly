{
  "extends": "../config-typescript/base.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "index.ts",
    "email.ts",
    "resend.ts",
    "emails/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    ".react-email"
  ]
}