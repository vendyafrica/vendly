{
  "extends": "../config-typescript/react-library.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
