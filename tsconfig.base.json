{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@vendly/database": ["./packages/database/src/index.ts"],
      "@vendly/database/*": ["./packages/database/src/*"],
      "@vendly/auth": ["./packages/auth/src/index.ts"],
      "@vendly/auth/*": ["./packages/auth/src/*"],
      "@vendly/types": ["./packages/types/src/index.ts"],
      "@vendly/types/*": ["./packages/types/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
